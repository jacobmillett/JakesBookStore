@model Books

<div class="card m-1 p-1">
    <h3>@Model.Title <span class="badge rounded-pill bg-primary text-white float-end">$@Model.Price</span></h3>
    <ul>
        <li>Author: @Model.Author</li>
        <li>Publisher: @Model.Publisher</li>
        <li>ISBN: @Model.ISBN</li>
        <li>Classification/Category: @Model.Classification/@Model.Category</li>
        <li>Number of Pages: @Model.PageCount</li>
        
    </ul>

</div>